@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope-open-text fa-4x text-primary mb-3"></i>
                        <p class="lead">
                            Please check your email to reset your password.
                        </p>
                        <p>
                            If you don't receive the email within a few minutes, please check your spam folder or try again.
                        </p>
                        <div class="mt-4">
                            <a asp-page="./Login" asp-route-userType="@TempData["UserType"]" class="btn btn-outline-primary">Return to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        border: none;
        color: #212529;
    }
</style>
