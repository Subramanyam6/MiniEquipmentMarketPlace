@model MiniEquipmentMarketplace.Models.Equipment

@{
    ViewData["Title"] = "Delete Equipment";
    Layout = "_CrudLayout";
}

<div class="card">
    <div class="card-body">
        <h1 class="card-title text-danger">Delete Equipment</h1>
        <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Vendor)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Vendor.Name)
            </dd>
        </dl>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="EquipmentId" />
            <button type="submit" class="btn btn-danger btn-action">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-action">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
